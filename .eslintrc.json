{
   "extends": [ "eslint-config-silvermine/node", "plugin:react/recommended" ],

   "plugins": [
      "react"
   ],

   "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
         "jsx": true
      }
   },

   "env": {
      "node": true,
      "commonjs": true,
      "es6": true
   },

   "globals": {
      "$": true,
      "document": true
   },

   "rules": {
      "silvermine/no-multiline-var-declarations": "off",
      "one-var": "off",
      "no-restricted-syntax": "off",
      "new-cap": "off",
      "no-process-env": "off",
      "strict": "off",
      "react/prop-types": "off"
   }
}
